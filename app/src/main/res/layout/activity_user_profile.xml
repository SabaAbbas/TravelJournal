<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wallpaper"
    android:layout_height="match_parent"

    tools:context="com.example.anumabbas.traveljournal.UserProfile">


    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="#ffff"
        android:textStyle="bold"
        android:hint="@string/Name" />

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:textColorHint="#ffff"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="@string/Age" />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/age"
        android:layout_alignStart="@+id/age"
        android:layout_below="@+id/age"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:textColorHint="#ffff"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="@string/City" />

    <EditText
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city"
        android:layout_alignStart="@+id/city"
        android:layout_below="@+id/city"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColorHint="#ffff"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:hint="@string/Country" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/country"
        android:layout_alignStart="@+id/country"
        android:layout_below="@+id/country"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:textColorHint="#ffff"
        android:textStyle="bold"
        android:hint="@string/Phone_Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phone"
        android:layout_alignRight="@+id/phone"
        android:layout_below="@+id/phone"
        android:layout_marginTop="27dp"
        android:background="#191970"
        android:onClick="UpdateInformation"
        android:text="@string/Update"
        android:textColor="#ffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_alignTop="@+id/button11"
        android:background="#191970"
        android:textColor="#ffff"
        android:onClick="goToUserProfile"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/Cancel" />
</RelativeLayout>
